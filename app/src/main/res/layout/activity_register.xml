<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical"
    tools:context="com.zin.opticaltest.activity.RegisterActivity">
    <include layout="@layout/custom_toolbar"
       android:id="@+id/tl_regisger_act"></include>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="用 户 名："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:id="@+id/et_reg_username"
                android:hint="   请输入你的用户名"

                android:background="@drawable/editview_board_gray"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="密 码 ："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:hint="   请输入你密码"
                android:id="@+id/et_reg_pwd"

                android:background="@drawable/editview_board_gray"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="确认密码 ："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:hint="   请再次输入你的密码"

                android:id="@+id/et_reg_pwd_confirm"
                android:background="@drawable/editview_board_gray"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="真实姓名 ："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"

                android:hint="   "
                android:id="@+id/et_reg_realname"
                android:background="@drawable/editview_board_gray"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="班级 ："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"

                android:hint="   "
                android:id="@+id/et_reg_class"
                android:background="@drawable/editview_board_gray"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:text="学号 ："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:inputType="number"
                android:hint="   "

                android:id="@+id/et_reg_studentId"
                android:background="@drawable/editview_board_gray"/>

        </TableRow>



    </TableLayout>


    <Button
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/bt_register"
        android:background="@drawable/bt__blue_selector"
        android:text="下一步"
        android:layout_marginTop="31dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>



