<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              >
<include layout="@layout/custom_toolbar"
         android:id="@+id/tb_detail_paper"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_dialog"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_marginLeft="58dp"
        android:text="标题"

        android:layout_marginTop="31dp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_below="@+id/tv_title"

       ></View>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_quetionSum"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="58dp"
        android:text="题数：           100题"

        android:layout_marginStart="58dp"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
           ></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_totalscore_dialog"
        android:padding="2dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="58dp"
        android:text="总分：100分"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"

       ></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_totaltime_dialog"
        android:padding="2dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="58dp"

        android:text="考试时间：                120分钟"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"


        ></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="58dp"
        android:id="@+id/tv_papertype_dialog"
        android:text="模式:真题卷"

       />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        ></View>
    <Button
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/bt_startExam_dialog"
        android:background="@drawable/bt__blue_selector"
        android:text="开始考试"
        android:layout_marginTop="31dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/bt_check_paper"
        android:background="@drawable/bt__blue_selector"
        android:text="查看试题及解析"
        android:layout_marginTop="31dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</LinearLayout>